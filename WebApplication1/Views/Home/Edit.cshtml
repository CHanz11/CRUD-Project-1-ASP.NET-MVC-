@model WebApplication1.Models.Students

<h2>Edit Student Data</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <label>Name:</label>
    <input type="text" asp-for="Name" />
    <span asp-validation-for="Name" style="color: red;"></span>
    <br />

    <label>LastName:</label>
    <input type="text" asp-for="LastName" />
    <span asp-validation-for="LastName" style="color: red;"></span>
    <br />

    <label>Grade:</label>
    <input type="number" asp-for="Grade" />
    <span asp-validation-for="Grade" style="color: red;"></span>
    <br />

    <button type="submit" class="btn edit">Save Changes</button>
</form>

